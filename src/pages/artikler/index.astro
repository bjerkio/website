---
import Layout from '@layouts/default.astro';
import { getCollection } from 'astro:content';
import PostCard from '@components/post-card.astro';
import Brief from '@components/brief.astro';

const posts = await getCollection('post');

const compareNum = (a: any, b: any) => {
  if (a.data.date.valueOf() > b.data.date.valueOf()) {
    return -1;
  } else if (a.data.date.valueOf() < b.data.date.valueOf()) {
    return 1;
  }
  return 0;
}
---

<Layout
  title="Artikler"
  description="Artikler vi har skrever"
  socialMediaTitle="Artikler"
  path="/artikler"
>
  <main>
    <Brief 
      title="Artikler"
      content={[]}
    />
    <section class="posts">
      {
        posts
          .sort(compareNum)
          .filter(project => project.data.image)
          .filter((p, index) => index < 12)
          .map(project => <PostCard {...project} />)
      }
    </section>
  </main>
</Layout>

<style>
  main {
    width: var(--container-width);
    margin-inline: auto;
    display: grid;
    gap: 3rem;
  }

  section {
    margin-block: 1rem;
  }

  .posts {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
  }

</style>
