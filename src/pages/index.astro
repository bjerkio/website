      text-align: center;
      color: inherit;
      font-size: 1.25rem;
      text-decoration-color: inherit;
      text-decoration-thickness: 0.1rem;
      text-underline-offset: 0.25rem;
      padding: 0.5rem;
      border-radius: 0.5rem;
    }

    .button:hover {
      outline: 2px solid var(--color-focus-bg);
      outline-offset: 2px;
    }

    .button:focus {
      background-color: hsl(250, 100%, 98%);
    }
  }

  .partners {
    max-width: 1200px;
    text-align: center;
    margin-inline: auto;
    margin-block: var(--gap);
    padding-inline: 2rem;

    > h2 {
      margin-bottom: 4rem;
    }

    > .logos {
      display: flex;
      flex-wrap: wrap;
      align-items: center;
      justify-items: center;
      justify-content: center;

      gap: 3rem;
    }
  }

  .logos :global(> *) {
    max-height: 38px;
    max-width: 150px;
  }

  @media (max-width: 600px) {
    .partners > .logos {
      gap: 1.5rem;
    }

    .logos :global(> *) {
      max-height: 25px;
      max-width: 75px;
    }
  }
</style>