---
import Layout from '@layouts/default.astro';
import { getCollection } from 'astro:content';
import ProjectCard from '@components/project-card.astro';
import ProjectListCard from '@components/project-list-card.astro';

const projects = await getCollection('project');
---

<Layout
  title="Ting vi har gjort"
  description="Se et utvalg av prosjekter vi har jobbet. Siden 2009 har vi endret hvordan folk tenker, arbeider, kommuniserer og jobber gjennom 친 skape digitale produkter."
  socialMediaTitle="Bjerk 游꺕"
  path="/work"
>
  <main>
    <section class="brief">
      <h1>Arbeider</h1>
      <p>
        Sjekk ut hva vi har stelt i stand siden 2009! Vi har kastet oss ut i 친
        forvandle m친ten folk tenker, jobber, prater og livn칝rer seg p친 ved 친
        lage digre mengder digitale godbiter. Her f친r du en smakebit p친 noen av
        v친re hjertebarn.
      </p>
    </section>
    <section class="projects">
      {
        projects
          .filter(project => project.data.image)
          .map(project => <ProjectCard {...project} />)
      }
    </section>
    <section>
      <h2>Noen av v친re andre samarbeid</h2>
      <div class="other-projects">
        {
          projects
            .filter(project => !project.data.image)
            .map(project => <ProjectListCard {...project} />)
        }
      </div>
    </section>
  </main>
</Layout>

<style>
  main {
    width: var(--container-width);
    margin-inline: auto;
    display: grid;
    gap: 2rem;
  }

  .brief > p {
    max-width: 64ch;
  }

  .projects {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 2rem;
  }

  .other-projects {
    display: grid;
    gap: 1rem;
  }
</style>
