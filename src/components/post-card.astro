---
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';

export type Props = CollectionEntry<'post'>;

const { data, slug } = Astro.props;
---

<a href={data.sameAs ? data.sameAs[0] : `/artikler/${slug}`}>
  <article>
    <Image src={data.image} alt={data.title} class="project-image" />
    <header>
      <!-- <div class="project-tags">
        {data.categories.map(tag => <span>{tagNames[tag]}</span>)}
      </div> -->
      <h2>{data.title}</h2>
      <p>{data.description}</p>
    </header>
  </article>
</a>

<style>
  a {
    display: block;
    color: inherit;
    text-decoration: inherit;
    outline: 0;
  }

  a:hover {
    color: inherit;
  }

  .project-image {
    width: 100%;
    aspect-ratio: 11/7;
    height: auto;
    object-fit: cover;
  }

  .project-tags {
    display: flex;
    gap: 0.5rem;
    margin-block-end: 0.5rem;
  }

  .project-tags span {
    padding: 0.25rem 0.5rem;
    border-radius: 2rem;
    background-color: hsl(var(--blue-base) 10%);
    color: white;
    font-size: 0.75rem;
    font-weight: 500;
  }

  h2 {
    margin-block-end: 0;
  }

  p {
    margin: 0;
    color: hsl(var(--blue-base) 10%);
    display: -webkit-box;
    overflow: hidden;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
  }
</style>
