---
import Logo from './logo.astro';
import DiscordIcon from '~icons/ph/discord-logo-fill';
import GitHubIcon from '~icons/ph/github-logo-fill';
import LinkedInIcon from '~icons/ph/linkedin-logo-fill';
---

<footer>
  <div class="container">
    <section class="logo">
      <Logo />
      <div>
        © Bjerk 2023
      </div>
      <div>
        Org. nr.: 930 334 693
      </div>
    </section>
    <section class="content">
      <p>
        Send oss noen ord på <a href="mailto:kontoret@bjerk.io">
          kontoret@bjerk.io
        </a> eller ring oss på <a href="tel:+4722120512">+47 22 12 05 12</a>.
      </p>

      <ul class="links">
        <li><a href="/vilkar">Vilkår</a></li>
        <li><a href="/personvern">Personvernerklæring</a></li>
      </ul>
    </section>
    <section class="socials">
      <a
        aria-label="Discord-server for Bjerk"
        href="https://discord.gg/v6uUBFxXNf"
      >
        <DiscordIcon />
      </a>
      <a
        aria-label="GitHub-profile for Bjerk"
        href="https://github.com/bjerkio"
      >
        <GitHubIcon />
      </a>
      <a
        aria-label="Linked-profile for Bjerk"
        href="https://www.linkedin.com/company/bjerk"
      >
        <LinkedInIcon />
      </a>
    </section>
  </div>
</footer>

<style>
  footer {
    margin-top: 4rem;
    background-color: hsl(var(--blue-base) 20%);
  }

  a {
    --link-color: hsl(var(--blue-base) 80%);
  }

  @media (hover) {
    a:hover {
      --link-color: hsl(var(--blue-base) 70%);
    }
  }

  .container {
    width: var(--container-width);
    margin-inline: auto;
    color: white;
    padding-block: 4rem;

    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    flex-wrap: wrap;
  }
  .content {
  }
  .content p:first-child {
    font-size: 1.2rem;
    max-width: 30ch;
  }

  .logo div {
    color: hsl(var(--blue-base) 70%);
  }
  .logo {
    margin-top: 1.2rem;
  }
  .socials {
    margin-top: 1.2rem;
    font-size: 1.7rem;
    display: flex;
    gap: 1rem;
  }

  .socials a {
    color: white;
  }

  .links {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    margin-block: 1rem;
    list-style: none;
    padding: 0;
  }
</style>
