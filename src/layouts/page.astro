---
import type { MarkdownLayoutProps } from 'astro';
import Layout, { type Props as DefaultLayoutProps } from './default.astro';
import Brief from '@components/brief.astro';

export type Props = MarkdownLayoutProps<DefaultLayoutProps>;
const { frontmatter } = Astro.props;
---

<Layout {...frontmatter}>
  <main>
    <Brief title={frontmatter.headline} content={[]}>
      {
        frontmatter.heading && (
          <p>
            {frontmatter.heading}
          </p>
        )
      }
    </Brief>
    <section>
      <slot />
    </section>
  </main>
</Layout>

<style>
  main {
    margin-block: 2rem;
    width: min(90ch, 100% - 4rem);
    margin-inline: auto;

    display: flex;
    gap: 1.5rem;
    flex-wrap: wrap;
    justify-content: space-between;
  }

  :global(section > :first-child) {
    font-weight: 600;
    font-size: 1.25rem;
    line-height: 1.4;
  }

  aside {
    max-width: 300px;
    /* fill the remaining space */
    flex: 1;
  }

  h1 {
    font-size: 2rem;
    font-weight: 600;
    margin-block: 0.7rem;
    text-wrap: pretty;
  }

  section {
    max-width: 55ch;
  }

  main :global(img) {
    /* TODO: fix this ugly hack */
    max-width: 140%;
    float: right;
    height: auto;
    margin-block: 2rem;
  }

  @media (max-width: 994px) {
    main :global(img) {
      max-width: 100%;
      float: none;
      margin-block: 1rem;
    }
  }
</style>
